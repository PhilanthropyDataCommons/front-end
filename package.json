{
	"name": "front-end",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"start": "npm run start --workspace=apps",
		"test": "npm run --workspaces --if-present test",
		"lint": "npm run lint:eslint && npm run lint:prettier && npm run lint:tsc",
		"lint:eslint": "npm run --workspaces --if-present lint:eslint",
		"lint:prettier": "npm run --workspaces --if-present lint:prettier",
		"lint:tsc": "npm run --workspaces --if-present lint:tsc",
		"format": "npm run --workspaces --if-present format",
		"build": "npm run --workspaces --if-present build"
	},
	"devDependencies": {
		"@storybook/addon-docs": "^9.1.5",
		"@storybook/addon-onboarding": "^9.1.5",
		"@storybook/vue3-vite": "^9.1.5",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.18.1",
		"@types/qs": "^6.14.0",
		"typescript-eslint": "^8.43.0",
		"eslint": "^v9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"@vue/tsconfig": "^0.8.1",
		"eslint-config-love": "^125.0.0",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-storybook": "^9.1.6",
		"eslint-plugin-vue": "^10.4.0",
		"jsdom": "^27.0.0",
		"keycloak-js": "^26.2.0",
		"prettier": "^3.6.2",
		"storybook": "^9.0.0",
		"typescript": "^5.8.3",
		"vite": "^7.1.5",
		"vitest": "^3.2.4",
		"vue-eslint-parser": "^10.2.0",
		"vue-tsc": "^3.0.6"
	}
}
