{
	"name": "front-end",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@axa-fr/react-oidc": "^7.25.9",
		"@fontsource/source-sans-pro": "^5.2.5",
		"@heroicons/react": "^2.2.0",
		"@pdc/sdk": "^0.17.2",
		"dayjs": "^1.11.11",
		"jsonpath-plus": "^10.3.0",
		"pino": "^9.7.0",
		"pretty-bytes": "^7.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^7.5.2",
		"title-case": "^4.3.2",
		"web-vitals": "^4.2.4"
	},
	"engines": {
		"node": ">=22"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^8.6.12",
		"@storybook/addon-interactions": "^8.6.12",
		"@storybook/addon-links": "^8.6.12",
		"@storybook/blocks": "^8.0.5",
		"@storybook/react": "^8.6.12",
		"@storybook/react-vite": "8.6.12",
		"@storybook/test": "^8.0.5",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.15.3",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@typescript-eslint/eslint-plugin": "^7.17.0",
		"@typescript-eslint/parser": "^7.17.0",
		"@vitejs/plugin-react": "^4.3.4",
		"eslint": "^v8.57.1",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-airbnb-typescript": "^18.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.19",
		"jsdom": "^26.1.0",
		"prettier": "^3.5.3",
		"storybook": "^8.1.3",
		"typescript": "^5.5.3",
		"vite": "^6.3.4",
		"vitest": "^3.1.2"
	},
	"scripts": {
		"start": "vite",
		"build": "npm run build:app && npm run build:storybook",
		"build:app": "tsc && vite build",
		"build:storybook": "storybook build -o dist/storybook",
		"storybook": "storybook dev -p 6006",
		"lint": "npm run lint:eslint && npm run lint:prettier",
		"lint:prettier": "prettier . --check",
		"lint:eslint": "eslint ./src --ext ts,tsx,js --report-unused-disable-directives --max-warnings 0",
		"test": "vitest",
		"format": "prettier . --write",
		"preview": "vite preview"
	},
	"eslintConfig": {
		"extends": [
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"plugin:@typescript-eslint/strict",
			"airbnb",
			"airbnb/hooks",
			"airbnb-typescript",
			"prettier"
		],
		"parserOptions": {
			"project": "./tsconfig.json"
		},
		"ignorePatterns": [
			"vite.config.js",
			"public/OidcServiceWorker.js",
			"public/OidcTrustedDomains.js",
			"build",
			"dist"
		],
		"rules": {
			"import/prefer-default-export": "off",
			"import/no-default-export": "error",
			"import/no-extraneous-dependencies": [
				"error",
				{
					"devDependencies": [
						"**/*.test.{ts,tsx}",
						"src/setupTests.ts",
						"**/*.stories.*"
					],
					"optionalDependencies": false
				}
			],
			"jsx-a11y/label-has-associated-control": [
				"error",
				{
					"assert": "either"
				}
			],
			"react/function-component-definition": [
				"error",
				{
					"namedComponents": "arrow-function",
					"unnamedComponents": "arrow-function"
				}
			],
			"react/require-default-props": [
				"error",
				{
					"functions": "defaultArguments"
				}
			],
			"react/jsx-uses-react": "off",
			"react/react-in-jsx-scope": "off"
		},
		"overrides": [
			{
				"files": [
					"**/*.stories.*"
				],
				"rules": {
					"import/no-anonymous-default-export": "off",
					"import/no-default-export": "off"
				}
			}
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
